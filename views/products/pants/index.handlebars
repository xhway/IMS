<div class="w-users-useraccountwrapper account-page-wrapper flex-wrap h-full items-stretch" data-wf-user-account="true"
    data-wf-collection="site.siteUser">
    <div class="w-full flex justify-center">
        <div class="w-1/3">
            <a class="w-users-userformbutton button w-button" href="/products/pants/create">Create Pant</a>
        </div>
    </div>
    {{#each pants as |pant| }}
    <div class="w-1/4 p-3">
        <div class="w-users-blockcontent account-card">
            <div class="w-users-blockheader account-header">
                <h2 class="heading h3">{{pant.description}}</h2>
            </div>
            <div>
                <div class="account-info-wrapper">
                    <div class="spacer _16"></div>
                    <h3 class="field-label">SKU: {{pant.sku}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Color: {{pant.color}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Fit: {{pant.fit}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Waist: {{pant.waist}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Length: {{pant.length}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Quantity: {{pant.quantity}}</h3>
                    <div class="spacer _24"></div>
                    <h3 class="field-label no-margin">Brand: {{pant.brand}}</h3>
                    <div div class="spacer _16"></div>
                    <a class="w-users-userformbutton button w-button" href="/products/pants/{{pant.sku}}/edit">Edit</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>