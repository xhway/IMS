<div class="w-users-useraccountwrapper account-page-wrapper flex-wrap h-full items-stretch" data-wf-user-account="true"
    data-wf-collection="site.siteUser">
    <div class="w-full flex justify-center">
        <div class="w-1/3">
            <a class="w-users-userformbutton button w-button" href="/products/shirts/create">Create Shirt</a>
        </div>
    </div>
    {{#each shirts as |shirt| }}
    <div class="w-1/4 p-3">
        <div class="w-users-blockcontent account-card">
            <div class="w-users-blockheader account-header">
                <h2 class="heading h3">{{shirt.description}}</h2>
            </div>
            <div>
                <div class="account-info-wrapper">
                    <div class="spacer _16"></div>
                    <h3 class="field-label">SKU: {{shirt.sku}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Color: {{shirt.color}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Fit: {{shirt.fit}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Neck size: {{shirt.neck_size}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Arm Length: {{shirt.arm_length}}</h3>
                    <div class="spacer _16"></div>
                    <h3 class="field-label">Quantity: {{shirt.quantity}}</h3>
                    <div class="spacer _24"></div>
                    <h3 class="field-label no-margin">Brand: {{shirt.brand}}</h3>
                    <div div class="spacer _16"></div>
                    <a class="w-users-userformbutton button w-button"
                        href="/products/shirts/{{shirt.sku}}/edit">Edit</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>